                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/widget_indicator_primary"
                android:contentDescription="" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lesson1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_on_surface"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Mathematics" />

                <TextView
                    android:id="@+id/lesson1_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_on_surface_variant"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Dr. Smith" />

            </LinearLayout>

            <TextView
                android:id="@+id/lesson1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_on_surface_variant"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"
                android:text="09:00" />

            <TextView
                android:id="@+id/lesson1_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_badge_primary"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@color/widget_on_primary"
                android:textSize="9sp"
                android:textStyle="bold"
                android:text="A101" />

        </LinearLayout>

        <!-- Lesson 2 -->
