<?xml version="1.0" encoding="utf-8"?>
<!-- STYLE 1: Compact Next Lesson Widget (2x1) - Minimal card -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/widget_background_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Status badge -->
        <TextView
            android:id="@+id/lesson_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/widget_badge_primary"
            android:gravity="center"
            android:textColor="@color/widget_on_primary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="15m" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Mathematics" />

            <TextView
                android:id="@+id/lesson_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_on_surface_variant"
                android:textSize="11sp"
                android:maxLines="1"
                android:text="09:00 - 10:30" />

        </LinearLayout>

        <TextView
            android:id="@+id/lesson_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_badge_secondary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/widget_on_secondary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="A101" />

    </LinearLayout>

</RelativeLayout>
