<?xml version="1.0" encoding="utf-8"?>
<!-- STYLE 2: Next Lesson Card Widget (2x2) - Larger card with details -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/widget_background_rounded">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/lesson_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_badge_primary"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/widget_on_primary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="UP NEXT" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/time_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="in 15m" />

    </LinearLayout>

    <!-- Lesson name -->
    <TextView
        android:id="@+id/lesson_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/widget_on_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Mathematics" />

    <!-- Course code -->
    <TextView
        android:id="@+id/lesson_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_on_surface_variant"
        android:textSize="12sp"
        android:maxLines="1"
        android:text="MATH101" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="" />

    <!-- Bottom info column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lesson_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_surface"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="09:00 - 10:30" />

        <TextView
            android:id="@+id/lesson_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_surface_variant"
            android:textSize="12sp"
            android:text="Room A101" />

        <TextView
            android:id="@+id/lesson_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_surface_variant"
            android:textSize="11sp"
            android:text="Mr. Smith" />

    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/widget_on_surface_variant"
        android:textSize="14sp"
        android:visibility="gone"
        android:text="No more lessons today" />

</LinearLayout>
