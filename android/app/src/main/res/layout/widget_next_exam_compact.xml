<?xml version="1.0" encoding="utf-8"?>
<!-- STYLE 5: Next Exam Compact Widget (2x1) - Minimal exam card -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/widget_background_rounded_accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Days countdown badge -->
        <TextView
            android:id="@+id/days_until"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/widget_badge_error"
            android:gravity="center"
            android:textColor="@color/widget_on_error"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="3d" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exam_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_on_surface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Mathematics" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_on_surface_variant"
                    android:textSize="11sp"
                    android:text="May 15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_on_surface_variant"
                    android:textSize="11sp"
                    android:layout_marginHorizontal="4dp"
                    android:text="â€¢" />

                <TextView
                    android:id="@+id/exam_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_on_surface_variant"
                    android:textSize="11sp"
                    android:text="09:00" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
