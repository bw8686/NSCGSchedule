<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material You Dynamic Colors - Android 12+ (API 31+) Light Theme -->
    <!-- Uses system wallpaper-derived colors for true Material You experience -->
    
    <!-- Primary colors - from system accent -->
    <color name="widget_primary">@android:color/system_accent1_600</color>
    <color name="widget_on_primary">@android:color/system_accent1_0</color>
    <color name="widget_primary_container">@android:color/system_accent1_100</color>
    <color name="widget_on_primary_container">@android:color/system_accent1_900</color>
    
    <!-- Secondary colors - from system accent 2 -->
    <color name="widget_secondary">@android:color/system_accent2_600</color>
    <color name="widget_on_secondary">@android:color/system_accent2_0</color>
    <color name="widget_secondary_container">@android:color/system_accent2_100</color>
    <color name="widget_on_secondary_container">@android:color/system_accent2_900</color>
    
    <!-- Tertiary colors - from system accent 3 -->
    <color name="widget_tertiary">@android:color/system_accent3_600</color>
    <color name="widget_on_tertiary">@android:color/system_accent3_0</color>
    <color name="widget_tertiary_container">@android:color/system_accent3_100</color>
    <color name="widget_on_tertiary_container">@android:color/system_accent3_900</color>
    
    <!-- Error colors - keep static for semantic meaning -->
    <color name="widget_error">#B3261E</color>
    <color name="widget_on_error">#FFFFFF</color>
    <color name="widget_error_container">#F9DEDC</color>
    <color name="widget_on_error_container">#410E0B</color>
    
    <!-- Surface colors - from system neutral -->
    <color name="widget_surface">@android:color/system_neutral1_10</color>
    <color name="widget_surface_variant">@android:color/system_neutral2_100</color>
    <color name="widget_on_surface">@android:color/system_neutral1_900</color>
    <color name="widget_on_surface_variant">@android:color/system_neutral2_700</color>
    <color name="widget_surface_container">@android:color/system_neutral1_50</color>
    <color name="widget_surface_container_lowest">@android:color/system_neutral1_10</color>
    
    <!-- Other colors -->
    <color name="widget_outline">@android:color/system_neutral2_500</color>
    <color name="widget_outline_variant">@android:color/system_neutral2_200</color>
    <color name="widget_divider">@android:color/system_neutral2_200</color>
</resources>
